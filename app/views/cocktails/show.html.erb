<div class="container">
  <div class="row">
    <div id="restaurant" class="col-xs-10 col-xs-offset-1">
      <h2><%= @cocktail.name %></h2>

      <h3>Doses:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <p><%= dose.ingredient.name %></p>
            <p><%= dose.description %></p>
            <%= link_to "Delete dose", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
